<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.silva.lucas.opencvreconhecimentofacesimples.MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reconhecimento de Face" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escolher Imagem"
        android:id="@+id/btnEscolherImagem"/>

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/imgImagem"
        android:background="@color/colorAccent"/>
    <Button
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reconhecer Imagem"
        android:id="@+id/btnReconhecerImagem"/>

</LinearLayout>
